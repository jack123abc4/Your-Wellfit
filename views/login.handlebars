<div class="container">
  <div class="header-container">
<h1>Welcome!</h1>
</div>
</div>
<br>

<div class="container">
<button type="button" class="btn btn-info btn-round" data-toggle="modal" data-target="#loginModal">Login</button>
<button type="button" class="btn btn-info btn-round" data-toggle="modal" data-target="#signupModal">Sign Up</button>
</div>
<div class="modal fade" tabindex="-1" id="loginModal" data-keyword="false" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header border-bottom-0">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Login</h4>
            </div>
            <div class="modal-body">
                <form class="form login-form" id="loginForm" action="/login" method="POST">
                  <div class="form-group">
                    <label for="inputEmail" type="email" >Email: </label>
                    <input class="form-control" placeholder="Email address" type="email" name="email" id="inputEmail" />
                  </div>
                  <div class="form-group">
                    <label for="inputPassword">Password: </label>
                    <input class="form-control" placeholder="Password" type="password" name="password" id="inputPassword" />
                  </div>
                </form>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary" id="loginBtn" onClick="loginFormHandler()">Login</button>
              <br>
              <br>
              <p>New around here? <button type="submit" class="btn btn-primary" data-toggle="modal" data-dismiss="modal" data-target="#signupModal">Sign up!</button></p> 
                      <p>Login or Register with: 
 
        <a href="/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google</a></p>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" tabindex="-1" id="signupModal" data-keyword="false" data-backdrop="static">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">              
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Sign Up</h4>
            </div>
            <div class="modal-body">
                <form class="form signup-form" action="/signup" method="POST">
                  <div class="form-group">
                    <label for="signupUsername">Username: </label>
                    <input class="form-control" placeholder="Username" type="text" name="username" id="signupUsername" />
                  </div>
                  <div class="form-group">
                    <label for="signupEmail" type="">Email: </label>
                    <input class="form-control" placeholder="Email address" type="email" name="email" id="signupEmail" />
                  </div>
                  <div class="form-group">
                    <label for="signupPassword">Password: </label>
                    <input class="form-control" placeholder="Password" type="password" name="password" id="signupPassword" />
                  </div>
                </form>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-primary" id="signupBtn" onClick="signupFormHandler()">Sign Up</button>
              <br>
              <br>
              <p>Already have an account? <button type="submit" class="btn btn-primary" data-toggle="modal" data-dismiss="modal" data-target="#loginModal">Log in!</button></p>
                      <p>Login or Register with:
 
        <a href="/google" class="btn btn-danger"><span class="fa fa-google-plus"></span> Google</a></p>
              {{!-- <button type="submit" class="btn btn-primary" data-dismiss="modal">Close</button> --}}
            </div>
        </div>
    </div>
</div>



