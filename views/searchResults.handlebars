<form class="form search-form">
  <div class="form-group">
    <label for="recipe-search">Recipe:</label>
    <input class="form-input" type="text" id="recipe-search" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
  <div class="container">
  <div class="page-title">
    <div class="row">
      <div class="col-lg-6">
        <h1>Search Results</h1>
      </div>
  {{#each recipes as |recipe| }}
  <div class="post">
    <h3><a href="/recipe/{{recipe.id}}">{{recipe.name}}</a></h3>
    <p><small>Calories: {{recipe.calories}}</small></p>
    <p><img src="{{recipe.image.image_link}}"></p>
  </div>
   
  {{/each}}


<script src="\js\search.js"></script>