<h1 class="header-container">WellFit Tracker</h1>

{{#if removedexercise}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  exercise has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}


<div class="row">
  <div class="col-6">

  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addworkout" type="button" class="btn btn-primary align-self-center">Add Workout</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Exercise</th>
      <th scope="col">Sets</th>
      <th scope="col">Reps</th>
      <th scope="col">Weight</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#if workouts.length}}
    <div class="col-md-6 workout-log"></div>

    {{#each workouts as |workout|}}
    <tr>
      <th scope="row">{{workout.id}}</th>
      <td>{{workout.exercise}}</td>
      <td>{{workout.sets}}</td>
      <td>{{workout.reps}}</td>
      <td>{{workout.weight}}</td>
      <td class="text-end">
        <a href="/viewworkout/{{workout.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>
          View</a>
        <a href="/editworkout/{{workout.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        <button class="btn btn-danger btn-small" data-id="{{workout.id}}">DELETE</button>
      </td>
    </tr>
    {{/each}}
    </div>
    {{/if}}

  </tbody>
</table>
