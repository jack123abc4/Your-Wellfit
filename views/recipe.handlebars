<h1>WellFit Recipes</h1>

<div class="text-center">
  <h2 class="text-white" id="{{recipe.id}}">{{recipe.name}}</h2>
  <img src="{{recipe.image}}" alt="">
  <br>
  <br>
  
<a href="#" class="btn btn-primary btn-lg active" role="button" aria-pressed="true" state="active" id="subtract-btn">Subtract an Ingredient</a>
<a href="#" class="btn btn-primary btn-lg active" role="button" aria-pressed="false" state="inactive" id="replace-btn">Replace an Ingredient</a>
<a href="#" class="btn btn-primary btn-lg active" role="button" aria-pressed="false" state="inactive" id="add-btn" data-toggle="modal" data-target="#ingredientModal">Add your Own Ingredient</a>

<div class="modal fade" tabindex="-1" id="ingredientModal" data-keyword="false" data-backdrop="static">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Info</h4>
            </div>
            <div class="modal-body">
                <p></p>
            </div>
        </div>
    </div>
</div>


  <div>
    <h3>Ingredients</h3>
    <ul>
    {{#each ingredients as |ingredient|}}
      {{#if ingredient.active}}
      <li class="ingredient-list-element" id="ingredient-list-element-{{ingredient.id}}" style="text-decoration: none" state="active">{{ingredient.text}}</li>
      {{else}}
      <li class="ingredient-list-element" id="ingredient-list-element-{{ingredient.id}}" style="text-decoration: line-through" state="inactive">{{ingredient.text}}</li>
      {{/if}}
    {{/each}}

    </ul>
  </div>
  
  <div>
    <h3>Nutrients</h3>
      <ul id="nutrient-list">
        <li>Calories: <span id="calories"></span></li>
        <li>Calcium: <span id="ca"></span></li>
        <li>Carbs: <span id="chocdf"></span></li>
        <li>Cholesterol: <span id="chole"></span></li>
        <li>Fat: <span id="fat"></span></li>
        <li>Iron: <span id="fe"></span></li>
        <li>Fiber: <span id="fibtg"></span></li>
        <li>Potassium: <span id="k"></span></li>
        <li>Sodium: <span id="na"></span></li>
        <li>Protein: <span id="procnt"></span></li>
        <li>Sugar: <span id="sugar"></span></li>
      </ul>
  </div>
</div>

<script src="\js\recipe.js"></script>